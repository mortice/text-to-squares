<%= form_for(@text) do |f| %>
  <% if @text.errors.any? %>
    <div id="error_explanation" class="alert alert-error">
      <h2>There was an error.</h2>
      <ul>
      <% @text.errors.messages.each do |key,messages| %>
        <li><%= messages.join(" ") %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  


  <div class="field">
    <%# f.label :input %><br />
    <%= f.text_area :input,  :placeholder => "Type your text in here"  %>
  </div>

     <div class="field">
    <%= f.label :color_scheme %><br />
    <%= f.collection_select :color_scheme , ::Text::COLORS, :to_s, :to_s, 
       :include_blank => false %>
  </div>
  
  <div class="actions">
      <%= f.submit("Create Picture", :class => "btn btn-primary") %>
  </div>


<% end %>


